# ─── Auth (NextAuth v5) ───────────────────────────────────────────────────────
AUTH_SECRET=                          # Generate: openssl rand -base64 32
AUTH_GITHUB_ID=
AUTH_GITHUB_SECRET=
AUTH_GOOGLE_ID=
AUTH_GOOGLE_SECRET=

# ─── Supabase ─────────────────────────────────────────────────────────────────
NEXT_PUBLIC_SUPABASE_URL=             # https://<project>.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=            # Keep secret — never expose to the browser

# ─── App ──────────────────────────────────────────────────────────────────────
NEXT_PUBLIC_SITE_URL=                 # https://rcapsule.com (no trailing slash)
NEXT_PUBLIC_APP_URL=                  # Same as NEXT_PUBLIC_SITE_URL
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=      # Restrict to your domain in Google Cloud Console

# ─── Stripe ───────────────────────────────────────────────────────────────────
STRIPE_SECRET_KEY=                    # sk_live_... (use sk_test_... locally)
STRIPE_WEBHOOK_SECRET=                # whsec_... from Stripe dashboard
STRIPE_PRICE_MONTHLY=                 # price_...
STRIPE_PRICE_YEARLY=                  # price_...

# ─── Sentry ───────────────────────────────────────────────────────────────────
NEXT_PUBLIC_SENTRY_DSN=               # https://...@sentry.io/...
SENTRY_DSN=                           # Same value — used server-side

# ─── Redis (Upstash) ──────────────────────────────────────────────────────────
UPSTASH_REDIS_REST_URL=               # https://<db>.upstash.io
UPSTASH_REDIS_REST_TOKEN=

# ─── AI / External APIs ───────────────────────────────────────────────────────
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
OPENWEATHER_API_KEY=
AWS_LAMBDA_ENDPOINT=                  # For background-removal Lambda

# ─── Browser Extension ────────────────────────────────────────────────────────
ALLOWED_EXTENSION_ORIGIN=             # chrome-extension://<id>
