{
  "manifest_version": 3,
  "name": "Wardrobe Import",
  "version": "1.0",
  "description": "Import fashion items to your wardrobe",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": [
    "http://localhost:3000/*",
    "https://vesticloset.vercel.app/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
